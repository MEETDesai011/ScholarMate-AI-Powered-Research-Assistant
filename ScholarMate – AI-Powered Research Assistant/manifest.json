{
  "manifest_version": 3,
  "name": "ScholarMate - AI Research Assistant",
  "version": "1.0",
  "description": "Summarize, translate and polish text using Chrome AI APIs.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "ai" 
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}